@page "/cashier_console"
@using WebAppBlazor.Controls
@attribute [Authorize(Policy = "CashierOnly")]

@if (!string.IsNullOrWhiteSpace(cashierName))
{
    <div class="row">
        <div class="col-7"><h3>Cashier's Console</h3></div>
        <div class="col-2"><label for="cashier">Cashier Name:</label></div>
        <div class="col-3">
            <div class="form-group">
                <input type="text" id="cashier" class="form-control" @bind-value="cashierName" />
            </div>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-4">
            <SelectItemForSellingComponent OnItemSelected="SelectItem"></SelectItemForSellingComponent>
            <br />
            <SellItemComponent CashierName="@cashierName"
                                  SelectedItem="selectedItem"
                                  OnItemSold="SellItem"></SellItemComponent>
        </div>
        <div class="col">
            <br/>
            <TodayTransactionsComponent @ref="transactionComponent"></TodayTransactionsComponent>
        </div>
    </div>
}

@code {
    private TodayTransactionsComponent transactionComponent;

    private Item selectedItem;
    private string cashierName;


    //add for identity
    [CascadingParameter]
    private Task<AuthenticationState> _authState { get; set; }

    private AuthenticationState authState;

    protected override async Task OnInitializedAsync()
    {
        authState = await _authState;
        cashierName = authState.User.Identity.Name;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        // firstRender == true, only on the component's initial render
        if (firstRender)
        {
            transactionComponent.LoadTransactions(cashierName);
        }
    }

    private void SelectItem(Item Item)
    {
        selectedItem = Item;
    }

    private void SellItem(Item Item)
    {
        transactionComponent.LoadTransactions(cashierName);
    }

}
